@model Film
@{
    ViewData["Title"] = "Film Silme";
}
<h1>Film Silme</h1>

<form asp-controller="Filmler" asp-action="SilOnay" method="post">
    <input asp-for="Id" type="hidden" />
    <div class="mb-2">
        <label asp-for="Ad">@Model.Ad (@Model.Yil) adlı film silinecektir. Onaylıyor musunuz?</label>       
    </div>
    <button class="btn btn-primary">Sil</button>
    <a class="btn btn-secondary" asp-action="Index">Geri Dön</a>
</form>